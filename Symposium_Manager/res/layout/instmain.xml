<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkcyan"
    android:orientation="vertical" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/TxtMPPIDxxed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Welcome :"
            android:textColor="@color/gainsboro"
            android:textSize="27dp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/TxtMPPID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Inst_UN"
            android:textColor="@color/gainsboro"
            android:textSize="27dp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/CmdEVentIM"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginTop="10px"
        android:background="@color/chocolate"
        android:text="Event Details"
        android:textColor="@color/cornsilk"
        android:textSize="22dp" />

    <Button
        android:id="@+id/CmdVRIM"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginTop="10px"
        android:background="@color/orangered"
        android:text="View Registrations"
        android:textColor="@color/cornsilk"
        android:textSize="22dp" />

    <Button
        android:id="@+id/CmdVQIM"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginTop="10px"
        android:background="@color/chocolate"
        android:text="View Student Queries"
        android:textColor="@color/cornsilk"
        android:textSize="22dp" />
    <Button
        android:id="@+id/CmdSOIM"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginTop="10px"
        android:background="@color/orangered"
        android:text="Signout"
        android:textColor="@color/cornsilk"
        android:textSize="22dp" />
</LinearLayout>
 
</LinearLayout>
