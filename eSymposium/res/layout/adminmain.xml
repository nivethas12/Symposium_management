<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TxtRegUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkgoldenrod"
        android:gravity="center"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:text="Institution Registration"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/seashell" />

    <EditText
        android:id="@+id/TxtNameUR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Institution Name"
        android:inputType="textPersonName" />
 
   <EditText
       android:id="@+id/TxtMbUR"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:ems="10"
       android:hint="Contact Number"
       android:inputType="phone" />

      
    <EditText
        android:id="@+id/TxtUNUR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName" />
    
    <EditText
        android:id="@+id/TxtPwdUR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

   <EditText
       android:id="@+id/TxtAddrUR"
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_gravity="left|top"
       android:ems="10"
       android:gravity="top"
       android:hint="Address"
       android:inputType="textMultiLine" />
   
    <EditText
        android:id="@+id/TxtDescUR"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="left|top"
        android:ems="10"
        android:gravity="top"
        android:hint="Description"
        android:inputType="textMultiLine" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/CmdSubUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="0.52"
            android:background="@color/darkolivegreen"
            android:text="Submit"
            android:textColor="@color/azure" />
        
        <Button
            android:id="@+id/CmdViewUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.52"
            android:background="@color/deepskyblue"
            android:text="View Institutions"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/CmdBackUser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.52"
            android:background="@color/darkseagreen"
            android:text="Signout"
            android:textColor="@color/brown" />

    </LinearLayout>

</LinearLayout>